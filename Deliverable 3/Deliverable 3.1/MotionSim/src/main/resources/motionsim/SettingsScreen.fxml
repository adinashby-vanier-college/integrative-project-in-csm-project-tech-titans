<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="800" prefWidth="1450" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.motionsim.Logic.SettingsScreenController">
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" BorderPane.alignment="TOP_RIGHT">
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Settings Menu" />
            <Button fx:id="helpButton" style="-fx-font-size: 20px;" text="Help?" />
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" spacing="20" BorderPane.alignment="CENTER">
            <VBox spacing="10">
                <Label style="-fx-font-size: 40px; -fx-font-weight: bold;" text="General" />
                <HBox spacing="10">
                    <Label prefHeight="25.0" prefWidth="81.0" style="-fx-font-size: 16px;" text="Language:" />
                    <ChoiceBox fx:id="languageBox" />
                </HBox>
            </VBox>
            <VBox spacing="10">
                <Label style="-fx-font-size: 40px; -fx-font-weight: bold;" text="Difficulty" />
                <HBox spacing="20">
                    <RadioButton prefHeight="17.0" prefWidth="64.0" text="Easy" />
                    <RadioButton prefHeight="17.0" prefWidth="90.0" text="Normal" />
                    <RadioButton prefHeight="17.0" prefWidth="80.0" text="Hard" />
                </HBox>
            </VBox>
<VBox spacing="10">
    <Label style="-fx-font-size: 40px; -fx-font-weight: bold;" text="Wallpaper" />
    <HBox spacing="10">
        <Label prefHeight="135.0" prefWidth="195.0" style="-fx-font-size: 18px;" text="Change Background" />
        <ChoiceBox fx:id="backgroundPicker" prefHeight="135.0" prefWidth="209.0" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    </HBox>
</VBox>
        <VBox spacing="10">
            <Label style="-fx-font-size: 40px; -fx-font-weight: bold;" text="Audio" />
            <CheckBox fx:id="soundEffectsCheckBox" style="-fx-font-size: 20px;" text="Sound Effects" />
            <HBox spacing="10">
                <Label style="-fx-font-size: 35px; -fx-font-weight: bold;" text="Music Volume" />
                <Slider fx:id="volumeSlider" prefHeight="59.0" prefWidth="311.0" />
            </HBox>
        </VBox>
    </VBox>
    </center>
<bottom>
<HBox prefHeight="0.0" prefWidth="1450.0" spacing="20" BorderPane.alignment="BOTTOM_CENTER">
    <Button fx:id="saveButton" prefHeight="65.0" prefWidth="229.0" style="-fx-font-size: 30px;" text="Save" />
    <Region HBox.hgrow="ALWAYS" />
    <Button fx:id="exitButton" prefHeight="65.0" prefWidth="255.0" style="-fx-font-size: 30px;" text="Exit" />
</HBox>
</bottom>
</BorderPane>
